using System;

class Program {
    static void Main(string[] args) {
        // Initialize variables
        int numUnits = 0;
        double unitCost = 0;
        double sellingPrice = 0;
        double totalExpenses = 0;
        double totalRevenue = 0;
        double totalProfit = 0;
        bool moreData = true;

        // Loop to input data for multiple units
        while (moreData) {
            Console.Write("Enter the number of units: ");
            numUnits = Convert.ToInt32(Console.ReadLine());
            Console.Write("Enter the unit cost: ");
            unitCost = Convert.ToDouble(Console.ReadLine());
            Console.Write("Enter the selling price: ");
            sellingPrice = Convert.ToDouble(Console.ReadLine());

            // Calculate cost, revenue, and profit
            totalExpenses += numUnits * unitCost;
            totalRevenue += numUnits * sellingPrice;
            totalProfit = totalRevenue - totalExpenses;

        // Output the results
        Console.WriteLine("Total Expenses: Php " + totalExpenses);
        Console.WriteLine("Total Revenue: Php " + totalRevenue);
        Console.WriteLine("Total Profit: Php " + totalProfit);

        if (totalRevenue > totalExpenses)
         Console.WriteLine("Gained Gross PROFIT" );

         else
         {
         Console.WriteLine("LOSS On Sale" );
         }
               
           // Ask if there is more data
            Console.Write("Do you have more data? (Y/N): ");
            string input = Console.ReadLine();
            moreData = (input.ToUpper() == "Y");
        }
    }
}
